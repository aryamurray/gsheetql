{
  "name": "gsheetql-workspace",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:gas": "turbo build --filter=gas-backend",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:ui": "turbo test -- --ui",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "lint:critical": "turbo lint:critical",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  }
}
