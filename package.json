{
  "name": "gsheetql-workspace",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:gas": "turbo build --filter=gsheetql",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:ui": "turbo test -- --ui",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "lint:critical": "turbo lint:critical",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.8.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "dotenv": "^17.2.3",
    "eslint": "9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-format": "^1.0.2",
    "turbo": "^2.3.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.9"
  }
}
