{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "inputs": ["src/**/*.ts", "tsconfig.json", "package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts", "**/*.test.ts"],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**/*.ts", "eslint.config.js", ".eslintrc*"]
    },
    "lint:critical": {
      "outputs": [],
      "inputs": ["src/**/*.ts", "eslint.config.js", ".eslintrc*"]
    },
    "lint:fix": {
      "outputs": [],
      "inputs": ["src/**/*.ts", "eslint.config.js", ".eslintrc*"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "tsconfig.json"]
    },
    "push": {
      "dependsOn": ["build", "lint", "type-check"],
      "outputs": [],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["push"],
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
